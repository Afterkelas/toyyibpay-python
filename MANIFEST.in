# Include important files
include LICENSE
include README.md
include CHANGELOG.md
include requirements.txt
include py.typed

# Include package data
recursive-include toyyibpay *.py *.pyi *.typed

# Exclude tests and development files from distribution
prune tests
prune docs
prune examples
exclude .gitignore
exclude .env.example
exclude Makefile
exclude tox.ini
exclude pytest.ini
exclude .flake8
exclude .coveragerc
exclude requirements-dev.txt
exclude .github
recursive-exclude * __pycache__
recursive-exclude * *.py[co]
recursive-exclude * .DS_Store
global-exclude *.log
global-exclude *.bak
global-exclude *.swp