# ToyyibPay Configuration
# - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Your ToyyibPay API key (required)
TOYYIBPAY_API_KEY=your-secret-key-here

# Default category ID for payments (optional)
TOYYIBPAY_CATEGORY_ID=your-category-id

# Environment: dev, staging, or production (default: production)
TOYYIBPAY_ENVIRONMENT=dev

# Default URLs for payment callbacks (optional)
TOYYIBPAY_RETURN_URL=https://yourdomain.com/payment/return
TOYYIBPAY_CALLBACK_URL=https://yourdomain.com/webhooks/toyyibpay

# Database Configuration (optional)
# - - - - - - - - - - - - - - - - - - - - - - - - - - -
# PostgreSQL connection string
DATABASE_URL=postgresql://user:password@localhost:5432/toyyibpay_db

# Application Configuration
# - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Flask/FastAPI secret key
SECRET_KEY=your-app-secret-key

# Application environment
APP_ENV=development

# Debug mode (true/false)
DEBUG=true

# Application port
PORT=8000

# Logging Configuration
# - - - - - - - - - - - - - - - - - - - - - - - - - - -
LOG_LEVEL=INFO
LOG_FILE=/var/log/toyyibpay/app.log

# Email Configuration (for notifications)
# - - - - - - - - - - - - - - - - - - - - - - - - - - -
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@yourdomain.com